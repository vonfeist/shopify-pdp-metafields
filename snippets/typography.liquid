<link rel="preload" as="font" href="{{ 'GT-Super-Display-Light.woff2' | asset_url }}" type="font/woff2" crossorigin />
<link rel="preload" as="font" href="{{ 'GT-Super-Display-Light-Italic.woff2' | asset_url }}" type="font/woff2" crossorigin />
<link rel="preload" as="font" href="{{ 'GT-Super-Text-Regular.woff2' | asset_url }}" type="font/woff2" crossorigin />
<link rel="preload" as="font" href="{{ 'Platform-Medium.woff2' | asset_url }}" type="font/woff2" crossorigin />

{%- style -%}
  @font-face {
    font-family: 'GT Super Display';
    font-weight: 400;
    font-style: normal;
    font-display: swap;
    src: url({{ 'GT-Super-Display-Light.woff2' | asset_url }}) format('woff2');
  }

  @font-face {
    font-family: 'GT Super Display Italic';
    font-display: swap;
    font-weight: 400;
    src: url({{ 'GT-Super-Display-Light-Italic.woff2' | asset_url }}) format('woff2');
    font-style: italic;
  }

  @font-face {
    font-family: 'GT Super Text';
    src: url({{ 'GT-Super-Text-Regular.woff2' | asset_url }}) format('woff2');
    font-display: swap;
    font-weight: 400;
  }

  @font-face {
    font-family: 'Platform';
    src: url({{ 'Platform-Medium.woff2' | asset_url }}) format('woff2');
    font-weight: 400;
    font-display: swap;
  }
{%- endstyle -%}

