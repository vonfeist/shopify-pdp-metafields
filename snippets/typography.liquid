    font-display: swap;
    src: url({{ 'GT-Super-Display-Light.woff2' | asset_url }}) format('woff2');
  }

  @font-face {
    font-family: 'GT Super Display Italic';
    font-display: swap;
    font-weight: 400;
    src: url({{ 'GT-Super-Display-Light-Italic.woff2' | asset_url }}) format('woff2');
    font-style: italic;
  }

  @font-face {
    font-family: 'GT Super Text';
    src: url({{ 'GT-Super-Text.woff2' | asset_url }}) format('woff2');
    font-display: swap;
